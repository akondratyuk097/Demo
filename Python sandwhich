
void setup() {
  Serial.begin(9600);
  while (!Serial) {
    // Wait for the Serial connection to be established
  }
}

void loop() {
  int x;
  int y;

  Serial.println("Regular or Gluten-free bun? Type 44 for gluten-free and 99 for the regular bun option.");

  while (Serial.available() == 0) {
    // Wait until data is available in the serial buffer
  }

  // Read the input values
  x = Serial.parseInt();
  y = Serial.parseInt();

  // Process bun choice
  switch (x) {
    case 44:
      Serial.println("Make one gluten-free bun.");
      break;
    case 99:
      Serial.println("Make one regular bun.");
      break;
    default:
      Serial.println("Please make the correct selection.");
  }

  // Additional code for processing Topping_choice if needed
  // ...

  // Add some delay or other logic to control the pace of the loop
  delay(1000);
}
