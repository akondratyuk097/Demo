void setup() {
  Serial.begin(9600);
  while (!Serial) {
    // Wait for the Serial connection to be established
  }
}

void loop() {
  int x;
  int y;
  int z;

  Serial.println("Regular or Gluten-free bun? Type 44 for gluten-free and 99 for the regular bun option.");

  while (Serial.available() == 0) {
    // Wait until data is available in the serial buffer
  }

  // Read the input values
  x = Serial.parseInt(); // initial bun choice gluten or regular bun
  y = Serial.parseInt(); // topping selection
  z = Serial.parseInt(); // bun selection again

  // Process bun choice
  switch (x) {
    case 44:
      Serial.println("Make one gluten-free bun.");
      break;
    case 99:
      Serial.println("Make one regular bun.");
      break;
    default:
      Serial.println("Please make the correct selection.");
  }
if (x == 44 || x == 99) {
  Serial.println("Select the available options and type the associated values:");
  Serial.println("1. Chicken Salad.");
  Serial.println("2. Cheese.");
  Serial.println("3. Salami.");
  Serial.println("4. Turkey.");
  while (Serial.available() == 0) {
    // Wait until data is available in the serial buffer
  }
 }
  // Select the appropriate topping 
  switch(y) {
    case 1:
      Serial.println("With chicken salad.");
    case 2:
      Serial.println("With Cheese.");
    case 3:
      Serial.println("With salami.");

  }
  delay(1000);
}
